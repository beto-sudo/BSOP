{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "baseUrl": ".",

    "paths": {
      "@/*": ["./*"],

      /* ✅ Tu carpeta nueva con componentes “privados” */
      "@/_components/*": [
        "./app/_components/*",
        "./_components/*"
      ],

      /* ✅ Compatibilidad con imports existentes tipo '@/components/...'
         — probará primero app/_components, luego _components de raíz y, si existiera, components de raíz */
      "@/components/*": [
        "./app/_components/*",
        "./_components/*",
        "./components/*"
      ]
    }

    /* Si prefieres mantener target bajo, añade además:
       "downlevelIteration": true
    */
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
